<%- include('partials/header') %>

    <section class="mb-4">
      <h1 class="font-weight-bold  ">Please Register</h1>
      <div class="row">
        <div class="col-md-9 mb-5">
          <form action="/register" method="POST" class="register_form">
            <div class="row">
              <div class="col-md-6">
                <div>
                  <input
                    type="text"
                    name="username"
                    class="form-control"
                    placeholder="Username"
                    required
                  />
                  <br />
                </div>
              </div>
              <div class="col-md-6">
                <div>
                  <select name="blood_group" class="form-control" type="text" required>
                    <option value="">Blood Group</option>
                    <option value="A-">A-</option>
                    <option value="B-">B-</option>
                    <option value="O-">O-</option>
                    <option value="AB-">AB-</option>
                    <option value="A+">A+</option>
                    <option value="B+">B+</option>
                    <option value="O+">O+</option>
                    <option value="AB+">AB+</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div>
                  <input
                    type="password"
                    name="password"
                    rows="2"
                    class="form-control"
                    placeholder="Password"
                    required
                  ></input>
                  <br />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div>
                  <input
                    name="phone"
                    type="text"
                    class="form-control"
                    pattern="[6789][0-9]{9}"
                    placeholder="Phone Number"
                    required
                  />
                  <br />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div>
                  <input
                    type="text"
                    name="flatno"
                    class="form-control"
                    placeholder="Flat Number"
                    required
                  />                  
                  <br />
                </div>
              </div>
              <div class="col-md-6">
                <div>
                  <input
                    type="text"
                    name="addline1"
                    class="form-control"
                    placeholder="Address Line 1"
                    required
                  />                  
                  <br />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div>
                  <input
                    type="text"
                    name="state"
                    class="form-control"
                    placeholder="State"
                    required
                  />                  
                  <br />
                </div>
              </div>
              <div class="col-md-6">
                <div>
                  <input
                    type="text"
                    name="pincode"
                    class="form-control"
                    pattern="[0-9]{6}"
                    placeholder="Pincode"
                    required
                  />                  
                  <br />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 form-switch">
                <input class="form-check-input" type="checkbox" checked="checked" required />
                <span class=""
                  >I confirm that I am atleast 18 years old.</span
                ><br />
              </div>
            </div>
            <br />
            <button class="btn btn-info" type="submit">
              Register
              <i class="fa fa-paper-plane"></i>
            </button>
            <button class="btn btn-info" type="reset">
              Reset
              <i class="fa fa-times"></i>
            </button>
          </form>
        </div>

        <div class="col-md-3">
          <!-- <img src="/Images/Registerimg.jpg" width="300px" /> -->
          <img src="https://europeanbloodalliance.eu/wp-content/uploads/2018/04/EBA_1_patient_care.gif" width="380px" />
          
        </div> 
      </div>
    </section>

    <%- include('partials/footer') %>